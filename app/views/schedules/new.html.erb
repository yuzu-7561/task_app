<div class = main_container>
    <h3>スケジュール新規作成</h3>

    <%= render "shared/error", obj: @schedule %>

    <%= form_with model: @schedule do |f| %>
    <table>
        <tr>
            <th><%= f.label :title, "タイトル" %></th>
            <td><%= f.text_field :title %></td>
        </tr>

        <tr>
            <th><%= f.label :start_date, "開始日" %></th>
            <td><%= f.date_field :start_date %></td>
        </tr>

        <tr>
            <th><%= f.label :end_date, "終了日" %></th>
            <td><%= f.date_field :end_date %></td>
        </tr>

        <tr>
            <th><%= f.label :whole_day, "終日" %></th>
            <td><%= f. check_box :whole_day %>終日の場合はチェックを入れます</td>
        </tr>

        <tr>
            <th><%= f.label :memo, "スケジュールメモ" %></th>
            <td><%= f.text_area :memo %></td>
        </tr>
    </table>

    <div>
        <ul>
            <li><%= f.submit "スケジュールを新規登録する" %></li>
            <li><%= link_to "スケジュール一覧に戻る", schedules_path %></li>
        </ul>
    </div>
    <% end %>
</div>
